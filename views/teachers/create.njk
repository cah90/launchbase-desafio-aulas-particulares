{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/teachers">
  <section class="avatar"></section>

  <section class="details">

  <h3>detalhes</h3>

  <div class="item">
    <div>Avatar</div>
    <input type="url" name="avatar_url" placeholder="http://">
  </div>

  <div class="item">
    <div>Nome Completo</div>
    <input type="text" name="name">
  </div>

  <div class="item">
    <div>Data de Nascimento</div>
    <input type="date" name="birth">
  </div>

  <div class="item">
    <div>Grau de escolaridade</div>
    <select type="select" name="scholarity">
      <option value="high_school">Ensino Médio Completo</option>
      <option value="higher_education">Ensino Superior Completo</option>
      <option value="master_degree">Mestrado</option>
      <option value="doctorate_degree">Doutorado</option>
    </select>
  </div>

  <div class="item">
    <div>Tipo de aula</div>
    <span><input type="radio" name="class_type" value="classroom" checked>Presencial</span>
    <span><input type="radio" name="class_type" value="online">Distância</span>
  </div>

  <div class="item">
    <div>Área de atuação</div>
    <input type="text" name="services">
  
  </div>

  
  <button type="submit">Salvar</button>
  

  </section>

  
</form>

{% endblock content %}